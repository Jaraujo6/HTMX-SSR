{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "types": ["node"],
    "target": "ES6",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
